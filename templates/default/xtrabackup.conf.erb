#
# /etc/holland/providers/xtrabackup.conf
#
# http://docs.hollandbackup.org/provider_configs/xtrabackup.html
#
# Generated by Chef for <%= node[:fqdn] %>
#

[holland:backup]
backups-to-keep = 1
estimated-size-factor = 1.0
plugin = xtrabackup

[xtrabackup]
innobackupex = innobackupex-1.5.1
global-defaults = <%= @resource.global_defaults %>
stream = <%= @resource.stream %>
slave-info = <%= @resource.slave_info %>

[compression]
method = <%=  @resource.method %>
inline = <%= @resource.inline %>
level = <%= @resource.level %>

[mysql:client]
defaults-extra-file = ~/.my.cnf
